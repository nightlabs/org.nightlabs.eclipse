   <extension
         point="org.nightlabs.eclipse.ui.fckeditor.contentFileWizard">
      <typeBinding
            mimeType="image/jpeg"
            priority="-1"
            wizardClass="org.nightlabs.eclipse.ui.fckeditor.file.image.ContentImageFileWizard">
      </typeBinding>
      <typeBinding
            mimeType="image/png"
            priority="-1"
            wizardClass="org.nightlabs.eclipse.ui.fckeditor.file.image.ContentImageFileWizard">
      </typeBinding>
      <typeBinding
            mimeType="image/gif"
            priority="-1"
            wizardClass="org.nightlabs.eclipse.ui.fckeditor.file.image.ContentImageFileWizard">
      </typeBinding>
      <typeBinding
            mimeType="image/pcx"
            priority="-1"
            wizardClass="org.nightlabs.eclipse.ui.fckeditor.file.image.ContentImageFileWizard">
      </typeBinding>
      <typeBinding
            mimeType="*"
            priority="-1"
            wizardClass="org.nightlabs.eclipse.ui.fckeditor.file.ContentFileWizard">
      </typeBinding>
   </extension>

